<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical"
    tools:context=".Penolakan_Bupati_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alasan Penolakan :"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_margin="10dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/text_box_alasan"
        android:gravity="start|top"
        android:hint="Alasan..."
        android:id="@+id/etAlasan"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:textColor="#000"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Ditolak"
        android:id="@+id/tvDitolak"
        android:layout_gravity="right"
        android:drawableLeft="@drawable/ic_tolak"
        android:textSize="18dp"
        android:padding="8dp"
        android:background="@drawable/background_btn_red"
        android:textColor="#fff"
        android:layout_margin="10dp"/>
</LinearLayout>