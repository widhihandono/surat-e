<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5E5"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/disposisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DISPOSISI : "
            android:textSize="9dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#000"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"/>

        <com.surat.surate_app.Util.DrawableImageView
            android:id="@+id/drawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/border"
            android:adjustViewBounds="true" />
    </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/lnColor"
    android:visibility="gone"
    android:layout_alignParentBottom="true"
    android:background="@drawable/background_menu">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvClose"
        android:textSize="17dp"
        android:textColor="#E91E63"
        android:text="Close"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merah"
            android:id="@+id/btnMerah"
            android:background="#E00404"
            android:textColor="#fff" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0A74CF"
            android:textColor="#fff"
            android:text="Biru"
            android:id="@+id/btnBiru"
            android:layout_marginLeft="8dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#070707"
            android:textColor="#fff"
            android:id="@+id/btnHitam"
            android:layout_marginLeft="8dp"
            android:text="Hitam"/>

    </LinearLayout>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarSize"
        android:max="150"
        android:min="0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSizeNumber"
        android:textSize="17dp"
        android:textColor="#494848"
        android:text="0"
        android:layout_margin="5dp"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lnEraser"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_menu">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCloseEraser"
            android:textSize="17dp"
            android:textColor="#E91E63"
            android:text="Close"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"/>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarSizeEraser"
            android:max="150"
            android:min="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSizeNumberEraser"
            android:textSize="17dp"
            android:textColor="#494848"
            android:text="0"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <include layout="@layout/fab_layout"
        android:visibility="gone"/>
</RelativeLayout>