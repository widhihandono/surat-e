<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_marginTop="110dp"-->
<!--        android:id="@+id/progressBar2"-->
<!--        />-->
</RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>