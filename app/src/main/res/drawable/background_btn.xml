<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <layer-list>
<!--            <item>-->
<!--                <shape android:shape="rectangle">-->
<!--                    <solid android:color="#EEC18C" />-->
<!--                    <corners android:radius="4dp"/>-->
<!--                </shape>-->
<!--            </item>-->

            <item android:bottom="4dp"
                android:top="1dp"
                android:left="1dp"
                android:right="2dp">

                <shape android:shape="rectangle">
                    <gradient

                        android:startColor="#041475"
                        android:centerColor="#2F3974"
                        android:endColor="#071474"
                        android:angle="90"
                        />
                    <padding
                        android:right="20dp"
                        android:left="20dp"
                        android:top="20dp"
                        android:bottom="20dp"/>

<!--                    <solid android:color="#FFFFFF"/>-->
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>


    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#E4E4E4">
            </solid>

            <corners
                android:radius="4dp">
            </corners>

            <!--<stroke-->
            <!--android:width="1dp"-->
            <!--android:color="#B6B6B6">-->
            <!--</stroke>-->

            <padding
                android:top="0dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="0dp">
            </padding>

            <size android:height="70dp"/>

        </shape>
    </item>
</selector>
