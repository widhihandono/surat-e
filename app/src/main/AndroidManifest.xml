<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.surat.surate_app">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/logo_e_biru"
        android:label="e-Disposisi Bupati"
        android:roundIcon="@drawable/logo_e_biru"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".Dokumen_by_id_jenis_Activity"></activity>
        <activity android:name=".Sementara_Activity"></activity>
        <activity
            android:name=".Detail_Ditolak_Bupati_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Ditolak_Bupati_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Sudah_Diteruskan_Activity"
            android:theme="@style/AppTheme_1" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <receiver
            android:name=".Util.OnAlarmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </receiver>

        <service android:name=".Services.AlarmService" />
        <service
            android:name=".Services.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="false"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>

        <activity
            android:name=".Show_Dokumen_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Terdisposisi_Offline_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Login_Activity"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity
            android:name=".History_Disposisi_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Detail_Dokumen_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Detail_Dokumen_Terdisposisi_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Detail_Dokumen_lokal_Activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".Penolakan_Bupati_Activity"
            android:theme="@style/AppTheme_1" />
        <activity android:name=".Menu_Utama_Activity" />
        <activity
            android:name=".Dokumen_activity"
            android:theme="@style/AppTheme_1" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>